    "/recipes": {
      "get": {
        "tags": [
          "Recetas"
        ],
        "summary": "Devuelve un listado de recetas",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "pageNumber": 1,
                  "offset": 1,
                  "pageSize": 10,
                  "recipes": ["Recipe1", "Recipe2"]
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {}
            }
          }
        }
      },
      "post": {
        "tags": [
          "Recetas"
        ],
        "summary": "Crear una receta nueva",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Delicious Recipe"
                  },
                  "media": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "example": ["image1.jpg", "image2.jpg"]
                    }
                  },
                  "preparationTime": {
                    "type": "string",
                    "example": "60 minutos"
                  },
                  "servingCount": {
                    "type": "integer",
                    "example": 4
                  },
                  "ingredients": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "example": ["ingredient1", "ingredient2"]
                    }
                  },
                  "steps": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "example": ["Step 1", "Step 2"]
                    }
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "RAPID_PREPARATION",
                        "VEGETARIAN",
                        "VEGAN",
                        "GLUTEN_FREE",
                        "IMMUNE_SYSTEM",
                        "INTESTINAL_FLORA",
                        "ANTI_INFLAMMATORY",
                        "LOW_SODIUM",
                        "LOW_CARB"
                      ],
                      "example": ["VEGETARIAN", "VEGAN"]
                    }
                  },
                  "calories": {
                    "type": "integer",
                    "example": 500
                  },
                  "proteins": {
                    "type": "number",
                    "example": 20.5
                  },
                  "totalFats": {
                    "type": "number",
                    "example": 15.3
                  },
                  "rating": {
                    "type": "integer",
                    "example": 4
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "schema": {
              "type": "string"
            },
            "example": "{{TOKEN}}"
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "example": {
                  "id": 100
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {}
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {}
            }
          },
          "500": {
            "description": "Error",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
